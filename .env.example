# ===== AI Service (Groq Cloud) =====
GROQ_API_KEY=
GROQ_BASE_URL=https://api.groq.com/openai/v1/chat/completions
GROQ_MODEL=llama-3.1-8b-instant
GROQ_MAX_TOKENS=2000
GROQ_TEMPERATURE=0.7

GEMINI_API_KEY=


# ===== Database (Neon DB) =====
NEON_DATABASE_URL=
NEON_POOL_SIZE=5
NEON_MAX_OVERFLOW=10
